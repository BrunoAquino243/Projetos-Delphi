unit uFrmLacosRepeticao;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TfrmLacosRepeticao = class(TForm)
    Button1: TButton;
    Button2: TButton;
    Button3: TButton;
    btnFibonacci: TButton;
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure Button3Click(Sender: TObject);
    procedure btnFibonacciClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmLacosRepeticao: TfrmLacosRepeticao;

Const
    C_LIMITEFINAL : INTEGER = 30000;

implementation

{$R *.dfm}

procedure TfrmLacosRepeticao.Button1Click(Sender: TObject);
var
   i, iLimite: integer;
begin

    i := 1;
    iLimite := 3;

    while i <= iLimite do
    begin
        ShowMessage('O índice atual é: ' + IntToStr(i));
        i := i + 1;
    end;

end;

procedure TfrmLacosRepeticao.Button2Click(Sender: TObject);
var
   i, iLimite: integer;
begin

    i := 1;
    iLimite := 3;

    repeat
        ShowMessage('O índice atual é: ' + IntToStr(i));
        i := i + 1;
    until i >= 1;

end;

procedure TfrmLacosRepeticao.Button3Click(Sender: TObject);
var
   i, j, iLimite: integer;
begin

    i := 1;
    iLimite := 3;

    // Laço crescente
    for j := i to iLimite do
    begin
        ShowMessage('O índice atual é: ' + IntToStr(j));
    end;

    // Laço decrescente
    for j := iLimite downto i do
    begin
        ShowMessage('O índice atual é: ' + IntToStr(j));
    end;

end;

procedure TfrmLacosRepeticao.btnFibonacciClick(Sender: TObject);
var

   iContador, iVlrAnterior, iVlrAtual, iVlrNovo: integer;
   sSequencia: string;

begin

    iVlrAnterior := 0;
    iVlrAtual := 1;
    iVlrNovo := 0;

    iContador:= 0;

    while iVlrNovo <= C_LIMITEFINAL do
    begin
        iContador := iContador +1;
        //showmessage('Laço: ' + IntToStr(iContador));

        // Só altera os valores se já passou a primeira vez no laço
        if (iVlrNovo > 0) then
        begin
            iVlrAnterior := iVlrAtual;
            //showmessage('iSeq1: ' +IntToStr(iSeq1));
            iVlrAtual := iVlrNovo;
            //showmessage('iSeq2: ' + IntToStr(iSeq2));
        end;

        iVlrNovo := iVlrAnterior + iVlrAtual;
        //showmessage('iSeqAtual: ' +IntToStr(iSeqAtual));

        //showmessage(IntToStr(iSeq3));
        sSequencia := sSequencia + ', ' +IntToStr(iVlrNovo);
    end;

    ShowMessage('A sequência de Fibonnacci é: ' + sSequencia);

end;

end.
